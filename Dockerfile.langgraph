# Dockerfile para LangGraph Studio
# Usa Python 3.11 (requerido pelo LangGraph)

FROM python:3.11-slim

WORKDIR /app

# Instala dependências do sistema
RUN apt-get update && apt-get install -y \
    gcc \
    && rm -rf /var/lib/apt/lists/*

# Copia requirements e instala dependências
COPY requirements-langgraph.txt .
RUN pip install --no-cache-dir -r requirements-langgraph.txt

# Copia o código fonte
COPY . .

# Expõe a porta do LangGraph Studio
EXPOSE 8123

# Variáveis de ambiente padrão
ENV PYTHONUNBUFFERED=1
ENV PYTHONPATH=/app

# Comando para iniciar o LangGraph dev server
CMD ["langgraph", "dev", "--host", "0.0.0.0", "--port", "8123"]
